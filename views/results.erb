<p class="lead">Here are your districts for query &ldquo;<%= @address %>&rdquo;:</p>

<% if @senate %>
  <section>
    <h3>State Senate District</h3>
    <dl class="dl-horizontal">
      <dt>District</dt>
      <dd><%= @senate[:district] %></dd>
      <dt>Representative</dt>
      <dd>
        <% if @senate.has_key?(:rep) %>
          <%= @senate[:rep].split.map {|n| n.capitalize}.join(' ')  %>
        <% end %>
      </dd>
    </dl>
  </section>
<% end %>
<% if @house %>
  <section>
    <h3>State House District</h3>
    <dl class="dl-horizontal">
      <dt>District</dt>
      <dd><%= @house[:district] %></dd>
      <dt>Representative</dt>
      <dd>
        <% if @house.has_key?(:rep) %>
          <%= @house[:rep].split.map {|n| n.capitalize}.join(' ') %>
        <% end %>
      </dd>
    </dl>
  </section>
<% end %>
