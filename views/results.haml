.row-fluid
  .span4.offset4
    %p.lead
      Here are your districts for
      %span.nowrap
        &ldquo;#{@address}&rdquo;:
    - if @senate
      %section
        %h3 State Senate District
        %dl.dl-horizontal
          %dt District
          %dd= @senate[:district]
          %dt Representative
          %dd
            - if @senate.has_key?(:rep)
              = @senate[:rep].split.map {|n| n.capitalize}.join(' ')
    - if @house
      %section
        %h3 State House District
        %dl.dl-horizontal
          %dt District
          %dd= @house[:district]
          %dt Representative
          %dd
            - if @house.has_key?(:rep)
              = @house[:rep].split.map {|n| n.capitalize}.join(' ')
    %section
      %h3 Council District
      - if @council
        %dl.dl-horizontal
          %dt District:
          %dd= @council[:district]
          %dt Representative:
          %dd
            - if @council.has_key?(:rep)
              %a{href: @council[:url]}
                = @council[:rep].split.map {|n| n.capitalize}.join(' ')
          %dt Phone Number:
          %dd= @council[:telephone]
          %dt Email:
          %dd
            %a{href: "mailto: #{@council[:email]}"}
              = @council[:email]
