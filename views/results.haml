    - if @magistrate
      %section
        %h3 Magistrate District
        %dl.dl-horizontal
          %dt District:
          %dd= @magistrate[:district]
          %dt Representative:
          %dd
            - if @magistrate.has_key?(:rep)
              = @magistrate[:rep].split.map {|n| n.capitalize}.join(' ')
    - if @voting
      %section
        %h3 Voting District
        %p= @voting[:name]
    - if @school_board
      %section
        %h3 School Board District
        %dl.dl-horizontal
          %dt District:
          %dd= @school_board[:district]
          %dt Representative:
          %dd
            - if @school_board.has_key?(:rep)
              = @school_board[:rep].split.map {|n| n.capitalize}.join(' ')
    - if @elem_school
      %section
        %h3 Elementary School District
        %p= @elem_school[:name]
    - if @middle_school
      %section
        %h3 Middle School District
        %p= @middle_school[:sname]
    - if @high_school
      %section
        %h3 High School District
        %p= @high_school[:sname]
    - if @neighborhood
      %section
        %h3 Neighborhood Association
        - if @neighborhood.empty? || (first_neighborhood=@neighborhood.first).empty? || first_neighborhood[:assoc_name].empty?
          %p none
        - else
          %ul
            - @neighborhood.each do |assoc|
              %li= assoc[:assoc_name]
